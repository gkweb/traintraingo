{
  "version": 2,
  "env": {
    "DEV_ID": "@secret-ptv-dev-id",
    "DEV_KEY": "@secret-ptv-dev-key",
    "API_BASE_URL": "https://timetableapi.ptv.vic.gov.au",
    "IS_DEBUG": "false"
  },
  "builds": [
    { "src": "client/package.json", "use": "@now/next" },
    { "src": "api/package.json", "use": "@now/node" },
    { "src": "client/next.config.js", "use": "@now/next" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/client/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/departures/(?<stop_id>[^/]+)$", "dest": "/client/departures?stop_id=$stop_id" }
  ]
}
